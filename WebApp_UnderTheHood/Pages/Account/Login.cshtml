@page
@model WebApp_UnderTheHood.Pages.Account.LoginModel
@{
}

<div class="container border" style="padding:20px">
    <form method="POST">
        <div class="form-group row">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>

            <div class="col-2">
                <label asp-for="Credential.Username"></label>
            </div>

            <div class="col-5">
                <input class="form-control" type="text" asp-for="Credential.Username" />
            </div>

            <span class="text-danger" asp-validation-for="Credential.Username"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Credential.Password"></label>
            </div>

            <div class="col-5">
                <input class="form-control" type="password" asp-for="Credential.Password" />
            </div>

            <span class="text-danger" asp-validation-for="Credential.Password"></span>
        </div>

        <div class="row form-check mb-2">
            <div class="col-2">
                <input class="form-check-input" type="checkbox" asp-for="Credential.RememberMe" />
                <label class="form-check-label" asp-for="Credential.RememberMe"></label>
            </div>

            <div class="col-5"></div>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <input class="btn btn-primary" type="submit" value="Login" />
            </div>

            <div class="col-5"></div>
        </div>
    </form>
</div>